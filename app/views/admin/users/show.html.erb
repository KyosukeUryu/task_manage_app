<h2>管理画面</h2>

<h3><%= @user.name %>さんの詳細</h3>
<h4>タスク数<%= @user.tasks.count %>件</h4>

<% if @user.tasks.blank? %>
  <p>まだタスクがありません</p>
<% else %>
  <table class="task_table table">
    <tr>
      <th>タスク名</th>
      <th>詳細</th>
      <th>終了期限</th>
      <th>ステータス</th>
      <th>優先順位</th>
    </tr>
    <% @user.tasks.each do |task| %>
      <tr class="task_row">
        <td><%= link_to task.name, task_path(task) %></td>
        <td><%= task.description %></td>
        <td><%= task.deadline %></td>
        <td><%= task.status %></td>
        <td><%= task.priority %></td>
        <td><%= link_to '編集', edit_task_path(task) %></td>
        <td><%= link_to '削除', task_path(task), method: :delete, data: { confirm: '本当に削除しますか' } %></td>
      </tr>
    <% end %>
  </table>
<% end %>
<%= link_to 'ユーザー一覧に戻る', admin_users_path, class: 'btn btn-info' %>
