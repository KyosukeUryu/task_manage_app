<h2>タスク詳細</h2>

<table class="task_show_table">
  <tr>
    <th>タスク名</th>
    <td><%= @task.name %></td>
  </tr>
  <tr>
    <th>詳細</th>
    <td><%= @task.description %></td>
  </tr>
  <tr>
    <th>終了期限</th>
    <td><%= @task.deadline %></td>
  </tr>
  <tr>
    <th>ステータス</th>
    <td><%= @task.status %></td>
  </tr>
  <tr>
    <th>優先順位</th>
    <td><%= @task.priority %></td>
  </tr>
  <tr>
    <th>作成日</th>
    <td><%= @task.created_at.strftime("%Y-%m-%d") %></td>
  </tr>
</table>

<%= link_to '一覧に戻る', tasks_path, class: 'btn btn-info' %>
