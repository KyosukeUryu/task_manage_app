<h2>タスク一覧</h2>

<table>
  <tr>
    <th>タスク名</th>
    <th>詳細</th>
  </tr>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.name %></td>
      <td><%= link_to task.description, task_path(task) %></td>
      <td><%= link_to '編集', edit_task_path(task) %></td>
      <td><%= link_to '削除', task_path(task), method: :delete, data: { confirm: '本当に削除しますか' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'タスク新規作成', new_task_path %>
